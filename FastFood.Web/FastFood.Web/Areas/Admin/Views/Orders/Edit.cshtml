@model FastFood.Models.OrderHeader

@{
    ViewData["Title"] = "Edit Order";
}

<style>
    /* Center the form vertically and horizontally */
    .login-form-container {
        min-height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-form {
        width: 100%;
        max-width: 400px;
        padding: 2rem;
        background: #ffffff;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        border-radius: 8px;
    }

        .login-form h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            font-weight: 600;
        }
</style>

<div class="login-form-container">
    <form asp-action="Edit" method="post" class="login-form needs-validation" novalidate>
        <h2>Edit Order</h2>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter Name" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="OrderStatus" class="form-label"></label>
            <select asp-for="OrderStatus" asp-items="@Html.GetEnumSelectList<OrderStatus>()" class="form-select" required>
                <option value="">Select Order Status</option>
            </select>
            <span asp-validation-for="OrderStatus" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PaymentStatus" class="form-label"></label>
            <select asp-for="PaymentStatus" asp-items="@Html.GetEnumSelectList<PaymentStatus>()" class="form-select" required>
                <option value="">Select Payment Status</option>
            </select>
            <span asp-validation-for="PaymentStatus" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="OrderTotal" value="@ViewData["Total"]" />
        <input type="hidden" asp-for="@Model.Id" />
        <input type="hidden" asp-for="@Model.ApplicationUserId" />

        <button type="submit" class="btn btn-danger w-100">Save</button>
        <a asp-action="Index" class="btn btn-secondary w-100 mt-2">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
