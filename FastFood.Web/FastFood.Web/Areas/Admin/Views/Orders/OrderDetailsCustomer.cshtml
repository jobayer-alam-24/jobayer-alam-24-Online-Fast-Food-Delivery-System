@using FastFood.Web.ViewModels
@model OrderDetailsViewModel

@{
    ViewData["Title"] = "Your Order Items";
}

<h2 class="mb-4">Ordered Items</h2>

@if (Model.OrderDetails != null && Model.OrderDetails.Any())
{
    <table class="table table-striped table-bordered mt-3">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>$@item.Price</td>
                    <td>@item.Count</td>
                    <td>$@(item.Price * item.Count)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No items found in this order.</div>
}
@if(Model.OrderHeader.OrderStatus != OrderStatus.Canceled)
{
    <form method="post" asp-action="CancelOrderCustomer" asp-route-id="@Model.OrderHeader.Id" class="mt-3">
        <button type="submit" class="btn btn-danger">Cancel Order</button>
    </form>
}
else
{
	<div class="alert alert-danger mt-3">This order has been canceled.</div>
}

