@model IEnumerable<FastFood.Web.ViewModels.ItemViewModel>

@{
    ViewData["Title"] = "Items";
}

<h1 class="text-center my-4 text-white bg-danger py-3 rounded">Items</h1>

<p class="text-left">
    <a asp-action="Create" class="btn btn-danger">Create New</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="table-dark text-center">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Title)</th>
            <th>@Html.DisplayNameFor(model => model.First().Description)</th>
            <th>@Html.DisplayNameFor(model => model.First().Price)</th>
            <th>Category</th>
            <th>Sub Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>$@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@item.CategoryTitle</td>
                <td>@item.SubCategoryTitle</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
