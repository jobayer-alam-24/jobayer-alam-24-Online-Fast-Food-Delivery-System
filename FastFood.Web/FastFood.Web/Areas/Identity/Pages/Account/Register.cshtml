@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<style>
    .form-control:focus {
        border-top: 2px solid #dc3545 !important;
        box-shadow: 0 -2px 6px rgba(220, 53, 69, 0.25);
        outline: none;
    }

    .form-control.filled {
        border-top: 2px solid #dc3545 !important;
    }

    .form-check-input:checked + .form-check-label {
        border-color: #dc3545;
        box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
    }

    .form-check:hover {
        background-color: rgba(220, 53, 69, 0.05);
        cursor: pointer;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow rounded-4 border-0">
                <div class="card-body px-4 py-5">
                    <h2 class="text-center text-danger fw-bold mb-4">Create Account</h2>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Name" class="form-label fw-semibold">Full Name</label>
                            <input asp-for="Input.Name"
                                   type="text"
                                   class="form-control border-0 border-top border-2 border-danger rounded-0 @(string.IsNullOrWhiteSpace(Model.Input?.Name) ? "" : "filled")" />
                            <span asp-validation-for="Input.Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.City" class="form-label fw-semibold">City</label>
                            <input asp-for="Input.City"
                                   type="text"
                                   class="form-control border-0 border-top border-2 border-danger rounded-0 @(string.IsNullOrWhiteSpace(Model.Input?.City) ? "" : "filled")" />
                            <span asp-validation-for="Input.City" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Address" class="form-label fw-semibold">Address</label>
                            <input asp-for="Input.Address"
                                   type="text"
                                   class="form-control border-0 border-top border-2 border-danger rounded-0 @(string.IsNullOrWhiteSpace(Model.Input?.Address) ? "" : "filled")" />
                            <span asp-validation-for="Input.Address" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.PostalCode" class="form-label fw-semibold">Postal Code</label>
                            <input asp-for="Input.PostalCode"
                                   type="text"
                                   class="form-control border-0 border-top border-2 border-danger rounded-0 @(string.IsNullOrWhiteSpace(Model.Input?.PostalCode) ? "" : "filled")" />
                            <span asp-validation-for="Input.PostalCode" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label fw-semibold">Email</label>
                            <input asp-for="Input.Email"
                                   type="text"
                                   class="form-control border-0 border-top border-2 border-danger rounded-0 @(string.IsNullOrWhiteSpace(Model.Input?.Email) ? "" : "filled")" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label fw-semibold">Password</label>
                            <input asp-for="Input.Password"
                                   type="password"
                                   class="form-control border-0 border-top border-2 border-danger rounded-0 @(string.IsNullOrWhiteSpace(Model.Input?.Password) ? "" : "filled")" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold">Confirm Password</label>
                            <input asp-for="Input.ConfirmPassword"
                                   type="password"
                                   class="form-control border-0 border-top border-2 border-danger rounded-0 @(string.IsNullOrWhiteSpace(Model.Input?.ConfirmPassword) ? "" : "filled")" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">Select Role</label>
                            <div class="row g-3">
                                @for (int i = 0; i < Model.Roles.Count; i++)
                                {
                                    var role = Model.Roles[i];
                                    <div class="col-6">
                                        <label for="role-@i" class="form-check d-block p-3 border border-secondary rounded text-center shadow-sm position-relative">
                                            <input type="radio"
                                                   id="role-@i"
                                                   class="form-check-input position-absolute top-0 end-0 m-2"
                                                   name="SelectedRole"
                                                   value="@role.Name" />
                                            <div class="fw-semibold text-dark">@role.Name</div>
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>

                        <button type="submit" class="btn btn-danger w-100 btn-lg">Register</button>

                        <div class="text-center mt-3">
                            <small>Already registered? <a asp-page="/Account/Login">Login</a></small>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
