@model FastFood.Models.Cart

@{
    ViewData["Title"] = "Item Details";
}

<div class="container py-5">

    <div class="card mx-auto shadow border-0 rounded" style="max-width: 30rem;">
        <div class="card-body d-flex flex-column">
            <h4 class="card-title fw-bold text-danger mb-3">@Model.Item.Title</h4>

            <p class="card-text" title="@Model.Item.Description">
                <strong>Description:</strong> @Model.Item.Description
            </p>
            <p class="card-text"><strong>Price:</strong> <span class="text-success fw-bold fs-5">$@Model.Item.Price</span></p>
            <p class="card-text"><strong>Category:</strong> @Model.Item.Category?.Title</p>
            <p class="card-text"><strong>SubCategory:</strong> @Model.Item.SubCategory?.Title</p>

            <form asp-action="Details" method="post" class="mt-4">
                <input type="hidden" name="ItemId" value="@Model.ItemId" />

                <div class="mb-3" style="max-width: 120px;">
                    <label for="Count" class="form-label fw-bold text-danger">Quantity</label>
                    <input type="number" id="Count" name="Count" value="@Model.Count" min="1" class="form-control" />
                </div>

                <button type="submit" class="btn btn-danger me-2">Add to Cart</button>
                <a asp-action="Index" class="btn btn-outline-danger">Back to List</a>
            </form>
        </div>
    </div>
</div>
