@model FastFood.Models.Cart

@{
    ViewData["Title"] = "Details";
}

<h1>Item Details</h1>

<div class="card" style="width: 30rem; margin: auto;">
    <div class="card-body">
        <h4 class="card-title">@Model.Item.Title</h4>
        <p class="card-text"><strong>Description:</strong> @Model.Item.Description</p>
        <p class="card-text"><strong>Price:</strong> $@Model.Item.Price</p>
        <p class="card-text"><strong>Category:</strong> @Model.Item.Category?.Title</p>
        <p class="card-text"><strong>SubCategory:</strong> @Model.Item.SubCategory?.Title</p>

        <form asp-action="Details" method="post">
            <input type="hidden" name="ItemId" value="@Model.ItemId" />
            <div class="form-group">
                <label for="Count">Quantity:</label>
                <input type="number" name="Count" value="@Model.Count" min="1" class="form-control" style="width: 100px;" />
            </div>
            <br />
            <button type="submit" class="btn btn-success">Add to Cart</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
